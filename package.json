{
	"name": "notespace",
	"version": "0.1.0",
	"private": true,
	"description": "Second Home for Students for boosting Productivity",
	"license": "AGPL-3.0-or-later",
	"author": "Rohit Tiwari",
	"workspaces": ["packages/*"],
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint && eslint src ",
		"lint:fix": "eslint src  --fix",
		"format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,html}'",
		"prepare": "husky",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
		"db:generate": "drizzle-kit generate --config=drizzle.config.ts",
		"db:check": "drizzle-kit check"
	},
	"dependencies": {
		"@eioluseyi/tailwind-fade": "^1.0.1",
		"@hookform/resolvers": "^4.1.2",
		"@neondatabase/serverless": "^0.10.4",
		"@radix-ui/react-avatar": "^1.1.3",
		"@radix-ui/react-checkbox": "^1.1.4",
		"@radix-ui/react-collapsible": "^1.1.3",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-dropdown-menu": "^2.1.6",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-navigation-menu": "^1.2.5",
		"@radix-ui/react-popover": "^1.1.6",
		"@radix-ui/react-scroll-area": "^1.2.3",
		"@radix-ui/react-select": "^2.1.6",
		"@radix-ui/react-separator": "^1.1.2",
		"@radix-ui/react-slot": "^1.1.2",
		"@radix-ui/react-tabs": "^1.1.3",
		"@radix-ui/react-tooltip": "^1.1.8",
		"@t3-oss/env-nextjs": "^0.12.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/typography": "^0.5.16",
		"@tanstack/react-query": "^5.66.11",
		"@trpc/client": "^11.0.0-rc.819",
		"@trpc/react-query": "^11.0.0-rc.819",
		"@trpc/server": "^11.0.0-rc.819",
		"@types/bun": "^1.2.4",
		"better-auth": "v1.2.1-beta.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.40.0",
		"jiti": "^2.4.2",
		"levenshtein-edit-distance": "^3.0.1",
		"lucide-react": "^0.476.0",
		"motion": "^12.4.7",
		"next": "^15.2.0",
		"next-themes": "^0.4.4",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hook-form": "^7.54.2",
		"react-use-measure": "^2.1.7",
		"resend": "^4.1.2",
		"server-only": "^0.0.1",
		"sonner": "^2.0.1",
		"superjson": "^2.2.2",
		"tailwind-merge": "^3.0.2",
		"tailwind-scrollbar": "^4.0.1",
		"tailwindcss-animate": "^1.0.7",
		"tailwindcss-motion": "^1.1.0",
		"use-resize-observer": "^9.1.0",
		"ws": "^8.18.1",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.0",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/postcss": "^4.0.9",
		"@types/node": "^22.13.8",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@types/ws": "^8.5.14",
		"eslint": "^9.21.0",
		"eslint-config-next": "^15.2.0",
		"eslint-config-prettier": "^10.0.2",
		"eslint-plugin-unused-imports": "^4.1.4",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"postcss": "^8.5.3",
		"prettier": "^3.5.2",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwindcss": "^4.0.9",
		"typescript": "^5.8.2"
	},
	"engines": {
		"node": ">=18.x",
		"npm": ">=7.0.0",
		"yarn": "3.4.1",
		"bun": ">= 3.4.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run lint && npm run format"
		}
	},
	"lint-staged": {
		"src/**/*.{ts,tsx,js,jsx}": [
			"npm run lint:fix",
			"npm run lint",
			"npm run format",
			"git add ."
		]
	}
}
